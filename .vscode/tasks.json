{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gcc build an active file",
      "type": "shell",
      "command": "/usr/bin/gcc",
      "args": ["-g", "${fileDirname}/assembler.c", "-o", "${fileDirname}/assemble"],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}